
@model basePing.Models.Match
@using basePing.Models;



<h1>@Model.Joueur1.Nom  @Model.Joueur1.Prenom  Contre @Model.Joueur2.Nom  @Model.Joueur2.Prenom</h1>
<br />
<div style="background-color: #199aca; width: auto; padding: 10px 50px;">
    <strong>@Model.Joueur1.Nom  @Model.Joueur1.Prenom :@Model.Score1 </strong>
    <br />
    <strong>@Model.Joueur2.Nom  @Model.Joueur2.Prenom :@Model.Score2 </strong>
    <br />
    <br />
    @{
        int cpt, cpt1 = 0, cpt2 = 0;
        <table border="1" class="table table-striped">

            <tr><th># Set</th><th>@Model.Joueur1.Nom  @Model.Joueur1.Prenom</th> <th>@Model.Joueur2.Nom  @Model.Joueur2.Prenom</th></tr>


            @{Set[] tab = new Set[Model.Score1 + Model.Score2 + 1];}
            @foreach (Set s in Model.LSet)
            {
                tab[s.Position] = s;
            }


            @for (cpt = 1; cpt < tab.Length; cpt++)
            {
                if (tab[cpt] != null)
                {
                    if (tab[cpt].PointJ1 > tab[cpt].PointJ2)
                    {
                        cpt1++;
                    }
                    else if (tab[cpt].PointJ2 > tab[cpt].PointJ1)
                    {
                        cpt2++;
                    }
                    <tr class="bg-info">
                        <td>Set @cpt</td>
                        <td>@tab[cpt].PointJ1</td>
                        <td>@tab[cpt].PointJ2</td>
                        @if ((bool)Session["admin"])
                        {
                            <td>@Html.ActionLink("Supprimer le set", "SupprimerSet", "Match", new { idS = tab[cpt].Id, idM = Model.Id }, new { @class = "btn btn-info" })</td>
                        }
                    </tr>

                }
                else
                {

                    <tr class="bg-info"><td>Set @cpt</td><td colspan="2">Pas d' information</td></tr>
                }

            }
        </table>

        if ((bool)Session["admin"] && cpt1 + cpt2 < Model.Score1 + Model.Score2)
        {
            <br />
            @Html.ActionLink("Insérer un score", "AjoutSet", "Match", new { idM = Model.Id, cpt1 = cpt1, cpt2 = cpt2, score1 = Model.Score1, score2 = Model.Score2, j1 = Model.Joueur1.Identite, j2 = Model.Joueur2.Identite }, new { @class = "btn btn-info" })
        }
        <div>
            <h2 class="alert-danger">@Request.QueryString["error"]</h2>
        </div>
        @Html.ActionLink("Retour", "InfoComp/" + Session["idComp"], "Competition", new { area = "" }, new { @class = "btn btn-danger" })
    }

</div>