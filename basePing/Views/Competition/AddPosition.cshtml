@using basePing.Models
<h2>Classement du joueur dans la compétition</h2>
<br />
<div style="background-color: #199aca; width: auto; padding: 10px 50px;">
    <div class="form-inline">
        @using (Html.BeginForm("FinalizeParticipation", "Competition"))
        {
            <div class="form-group">
                <label>Joueur </label>
                <input type="hidden" class="form-control" name="id" value="@ViewBag.participant.Id">
                <input type="text" disabled="disabled" class="form-control" name="nom" value="@ViewBag.participant.Nom">
            </div>

            <div class="form-group">
                <label>Joueur </label>
                <input type="text" disabled="disabled" class="form-control" value="@ViewBag.participant.Prenom">
            </div>

            <div class="form-group">
                <label>Position</label>
                <select class="form-control" name="position">
                    <option>Pas classé(e)</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                    <option>11</option>
                    <option>12</option>

                </select>
            </div>
            <br />
            <br />
            <input type="submit" class="btn btn-success" value="Valider" />
        }
    </div>
    @Html.ActionLink("Annuler", "InfoComp/" + Session["idComp"], new { area = "" }, new { @class = "btn btn-danger" })
</div>
