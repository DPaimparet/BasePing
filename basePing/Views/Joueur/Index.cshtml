@using basePing.Models;
@{
    ViewBag.Title = "Liste de joueur(s)";
}

<br />
<div class="form-inline">
    @using (Html.BeginForm("ListeJoueurs", "Joueur"))
    {
        <div class="form-group">
            <label>Joueur</label>
            <input type="text" class="form-control" name="nom">
        </div>

        <div class="form-group">
            <label>Nationalité</label>
            @Html.DropDownList("Pays",ViewBag.listePays as SelectList,string.Empty , new { @class = "form-control"})
        </div>

        <div class="form-group">
            <label>Sexe:</label>
            <select class="form-control" name="sexe">
                <option>Masculin</option>
                <option>Féminin</option>
            </select>
        </div>
        <br />
        <br />
        <input type="submit" class="btn btn-warning" value="Recherche" />
    }
</div>