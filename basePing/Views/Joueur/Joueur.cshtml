
@{
    ViewBag.Title = "Joueur";
}

<a name="top"></a>
<br />
<div style="background-color: #199aca; width: auto; padding: 10px 50px;">
    <div style="text-align: left;">
        <font size="6" color="#FFFFFF" face="arial"><h2>@ViewBag.Joueur.Nom @ViewBag.Joueur.Prenom</h2></font>
    </div>
</div>

<div style="position: relative; left: 700px; top: -100px; height:0px;">
    <img src="~/Content/image/@(ViewBag.Joueur.Id).jpg" style="border: 2px solid #fff; width: 382px; height: 334px; border-radius: 80px;">
</div>
<div>
    @Html.ActionLink("Retour", "Index", "Joueur", null, new { @class = "btn" })
    <p>
        <h3>Date de naissance : @ViewBag.Joueur.DateNaissance</h3> <br />
        <h3>Nationalité : @ViewBag.Joueur.National</h3>
    </p>

</div>
<div width: 460px; padding: 20px;">
    <div style="text-align: center;">
        <font face="arial" size="3">
            <a href="#1" title="" target="">Palmarès Civil</a> &nbsp;-&nbsp;
            <a href="#2" title="" target="">Palmarès Sportif</a>
        </font>
    </div>
</div>

<div width: 500px; height:290px; overflow: hidden;">
    <a name="1"></a>
    <div style="text-align: center;">Palmarès Civil</div>
    <div style="text-align: left;">
       @*Liste des palmarès civic*@
    </div>
</div>

<div style="height: 240px; width: 450px; overflow: auto; padding:25px;">
    <a name="2"></a>
    <div style="text-align: center;">Palmarès Sportif</div>
    <div style="text-align: left;">
       @*Liste des palmarès sportifs*@
    </div>
</div>
<button type="button" class="btn btn-success" value="Haut de la page" OnClick="window.location.href='#top';">Haut de la page</button>