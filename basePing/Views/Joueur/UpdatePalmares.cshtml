@using basePing.Models
@{
    ViewBag.Title = "UpdatePalmares";
}
<font size="6" color="#FFFFFF" face="arial">
    <div class="form-inline">
        @using (Html.BeginForm("Update", "Joueur"))
        {
            <div class="form-group">
                <label>Récompense reçue</label>
                <input type="hidden" class="form-control" name="idJoueur" value="@ViewBag.idJoueur">
                <input type="hidden" class="form-control" name="idPalmares" value="@ViewBag.palmares.IdPalmares">
                <input type="text" class="form-control" name="recompense" value="@ViewBag.palmares.Recompense">
            </div>
            <div class="form-group">
                <label>Date</label>
                <input type="date" class="form-control" name="date" value="@ViewBag.palmares.Annee.ToString("yyyy-MM-dd")">
            </div>
            <br />
            <div>
                <h2 class="alert-danger">@Request.QueryString["error"]</h2>
            </div>
            <input type="submit" class="btn btn-success" value="Modifier" />
        }
        @Html.ActionLink("Annuler", "Joueur", "Joueur", new { id = ViewBag.idJoueur }, new { @class = "btn btn-danger" })
    </div>
</font>


