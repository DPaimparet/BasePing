@model basePing.ViewModel.VMJoueur
@{
    ViewBag.Title = "NewJoueur";
}

<h2>Ajout d'un joueur ou d'une joueuse</h2>
<br />
<div style="background-color: #199aca; width: auto; padding: 10px 50px;">
    <div style="position: relative; left: 700px; top: -60px; height:0px;">
        <img src="~/Content/image/no-photo.jpg" style="border: 2px solid #fff; width: 382px; height: 334px; border-radius: 80px;">

    </div>
    @using (Html.BeginForm("AddJoueur", "Joueur"))
    {
        <div class="form-group">
            <label>Nom </label>
            @Html.TextBoxFor(model => model.Nom, new { @class = "form-control", type = "text", required = "required"})
            <label>Prenom </label>
            @Html.TextBoxFor(model => model.Prenom, new { @class = "form-control", type = "text", required = "required" })
            <label>Sexe </label>
            <select class="form-control" name="sexe" required="required">
                <option></option>
                <option>Masculin</option>
                <option>Féminin</option>
            </select>
            <label>Date de naissance</label>
            <input type="date" class="form-control" name="dateNaissance" required="required" />
            <label>Nationalité </label>
            @Html.DropDownList("Pays", Session["listePays"] as SelectList, string.Empty, new { @class = "form-control" , required = "required" })
            
        </div>

        <br />
        <br />
        <input type="submit" class="btn btn-warning" value="Enregistrer" />
        @Html.ActionLink("Annuler", "Index", "Joueur", new { area = "" }, new { @class = "btn btn-danger" })
    }
</div>
<div>
    <h2 class="alert-danger">@Request.QueryString["error"]</h2>
</div>



